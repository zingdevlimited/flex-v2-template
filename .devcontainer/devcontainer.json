{
  "image": "zingdev/devcontainer-node:16-base",
  "runArgs": ["--name", "{{name}}_devcontainer"],
  "containerUser": "vscode",
  "features": {
    "ghcr.io/zingdevlimited/dev-containers/zing-twilio-cli": {
      "version": "5.4.0-1",
      "flex": "6",
      "serverless": "3"
    }
  },
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "SonarSource.sonarlint-vscode",
        "yzhang.markdown-all-in-one",
        "streetsidesoftware.code-spell-checker",
        "yoavbls.pretty-ts-errors",
      ]
    }
  },
  "initializeCommand": "docker run --rm -v {{name}}-shared:/mnt/sv zingdev/shared-twilio-config 1000",
  "postCreateCommand": "ln -s /mnt/twilio-config/config.json /home/vscode/.twilio-cli/config.json",
  "mounts": [
    {
      "source": "{{name}}-shared",
      "target": "/mnt/twilio-config",
      "type": "volume"
    }
  ]
}
