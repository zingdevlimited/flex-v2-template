{
  "name": "{{name}}",
  "packageManager": "yarn@3.4.1",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "resolutions": {
    "@types/react": "^17",
    "@reduxjs/toolkit": "^1.9.1",
    "react-redux": "^8.0.5",
    "@build-now/serverless-helpers": "portal:/mnt/buildnow-v2/buildnow-v2/build-now/serverless-helpers",
    "@build-now/core": "portal:/mnt/buildnow-v2/buildnow-v2/build-now/core"
  },
  "scripts": {
    "prepare": "husky install",
    "build:all": "yarn workspaces foreach -A -p run build",
    "lint:all": "yarn workspaces foreach -A -p run lint",
    "start:all": "yarn workspaces foreach -A -p run start",
    "test:all": "yarn workspaces foreach -A -p run test"
  },
  "version": "0.0.1",
  "description": " implementation for the buildNow system. Designed for Flex v2",
  "author": "Zing Dev Limited",
  "license" : "SEE LICENSE IN ./LICENSE",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.6.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint ./packages/**/src/**/*.{ts,tsx} --fix"
    ]
  }
}
